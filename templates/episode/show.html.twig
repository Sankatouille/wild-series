{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('episode_index') }}">back to list</a>

    <a href="{{ path('episode_edit', {slug: episode.slug}) }}">edit</a>


    {% if app.user %}
        {{ include('episode/_delete_form.html.twig') }}
            <h1>Ajouter un commentaire</h1>
        {{ include('episode/_form.html.twig') }}
    {% endif %}

    {% for comment in episode.comments %}
        <div>{{comment.comment}}</div>
        {% if app.user and ((app.user == comment.author) or is_granted("ROLE_ADMIN"))  %}
        {{ include('comment/_delete_form.html.twig') }}
        {% endif %}
    {% endfor %}
{% endblock %}
